function sendMessage(message) {
    var xhr = new XMLHttpRequest();
    var params = "?message=" + encodeURI(message);
    xhr.open("POST", "@{FromWebR}" + params);
    xhr.send(null);
}

function getUsers() {
    var xhr = new XMLHttpRequest();
    xhr.open("GET", "@{GetUsersR}",false);
    xhr.send(null);
    return xhr.responseText;
}

var grid = new Array(42);
var rows = new Array(42);
var turn;
var user1 = "";
var user2 = "";
var numUser = 0;
var playing;
var radios = [];
var dests = [];

function newMessage(obj) {
        if(obj["NewMessage"] != null){
            var p = document.createElement('p');
            p.appendChild(document.createTextNode(obj["NewMessage"]));
            $('#history').append(p);
        }
        if(obj["Movement"] != null){
            movement(parseInt(obj["Movement"]),-1)
        }
        if(obj["NewGame"] != null){
            user2 = obj["NewGame"];
            setView(true);
            newGame(false);
        }
        if(obj["Cancel"] != null){
            window.alert(user2 + " has cancelled the game");
            setView(false);
            selectUser();
            sendNewMessage();
        }
        if(obj["Winner"] != null){
            window.alert(obj["Winner"] + " wins");
            setView(false);
            selectUser();
            sendNewMessage();
        }
        if(obj["Offline"] != null){
            $('#offline').show();
            $('#grid').hide();
            $('#users').hide();
        }
}

function movement(pos,player){
    var im;
    if(player == 1){
        im = "@{StaticR red_png}";
        turn = user2;
    }else{
        turn = user1;
        im = "@{StaticR yellow_png}";
    }
    
    if(rows[pos].src != "@{StaticR empty_png}")
           return false;
    for (var i=0;i<5;i++)
    {
        if(rows[7*(i+1)+pos].src != "@{StaticR empty_png}"){
           rows[7*i+pos].src = im;
           return true;
        }
    }
    rows[7*5+pos].src = im;
    return true;
}

function mov(pos){
   if(turn == user1)
     if(movement(pos,1))
       sendMessage("Movement "+ pos);
}

function cancel(){
    sendMessage("Cancel");
    setView(false);
    selectUser();
    sendNewMessage();
}

function createGrid(){
    var div = document.createElement("div");
    var but = document.createElement("input");    
    var p = document.createElement('p');
    p.innerHTML = "<b>Playing against:</b> " + user2;
    div.appendChild(p);
    p = document.createElement('p');
    p.innerHTML = "<b>Turn:</b> " + turn;
    div.appendChild(p);
    $('#info').append(div);
        
    for(var i=0;i<6;i++)
    {
        for (var j=0;j<7;j++)
        {
            var img = new Image();
            if(grid[i*7+j] == 0)
               img.src = "@{StaticR empty_png}";
            else 
                if(grid[i*7+j] == numUser)
                    img.src = "@{StaticR red_png}";
                else
                    img.src = "@{StaticR yellow_png}";
            img.width = 75;
            rows[i*7+j]=img;
            $('#grid1').append(img);
        }
    }
    for (var i=0;i<6;i++)
    {
        rows[i*7+0].onclick = function() {mov(0);};
        rows[i*7+1].onclick = function() {mov(1);};
        rows[i*7+2].onclick = function() {mov(2);};
        rows[i*7+3].onclick = function() {mov(3);};
        rows[i*7+4].onclick = function() {mov(4);};
        rows[i*7+5].onclick = function() {mov(5);};
        rows[i*7+6].onclick = function() {mov(6);};
    }
}

function get_radio_value() {
    for (var i = 0; i < radios.length; i++) {
        if (radios[i].checked) 
            return radios[i].value;
    }
    return "";
}

function get_dests_value(){
    for (var i = 0; i < dests.length; i++) {
        if (dests[i].checked) 
            return dests[i].value;
    }
    return "";
}

function selectUser(){
    var usrs = JSON.parse(getUsers());
    if(usrs["users"] != null){
    radios = new Array((usrs["users"]).length);
    var div = document.createElement("div");
    if((usrs["users"]).length <= 1){
        var p = document.createElement('p');
        p.appendChild(document.createTextNode("No user available."));
        div.appendChild(p);
    }else{
        for (var i=0;i<(usrs["users"]).length;i++)
        {
            var p = document.createElement('p');
            radios[i] = document.createElement("input");
            radios[i].setAttribute("type", "radio");
            radios[i].setAttribute("name", "value");
            radios[i].setAttribute("value", usrs["users"][i]);
            if(usrs["users"][i] != user1){
                p.appendChild(radios[i]);
                p.appendChild(document.createTextNode(" "+usrs["users"][i]));
                div.appendChild(p);
            }
        }
    }
    $('#users1').append(div);
    }
}

function setView(flag){
    if(flag){
        $('#users1').html('');
        $('#destin').html('');   
        $('#users').hide();
        $('#grid').show();
    }else{
        $('#grid').hide();
        $('#users').show();
        $('#grid1').html('');
        $('#info').html('');    
    }
}

function newGame(startedByMe){
    if(startedByMe)
      turn = user2;
    else
      turn = user1;
    for (var i=0;i<42;i++)
        grid[i] = 0;
    createGrid();
}

function clear1(){
    $('#history').empty();
}

function refreshM(){
    $('#users1').html('');
    selectUser();
}

function sendM(){
    var us = get_dests_value();
    var text = document.getElementById('msg').value;
    document.getElementById('msg').value = "";
    var p = document.createElement('p');
    p.appendChild(document.createTextNode(user1+" : "+text));
    $('#history').append(p);
    sendMessage("NewMessage \""+us+"\" \""+text+"\"");
}

function startM(){
    var us = get_radio_value();
    sendMessage("NewGame \"" + us + "\"");
    setView(true);
    user2 = us;
    newGame(true);
}

function sendNewMessage(){
    var usrs = JSON.parse(getUsers());
    if(usrs["all"] != null){
    dests = new Array((usrs["all"]).length+1);
    var div = document.createElement("div");
    var p;
    for (var i=0;i<(usrs["users"]).length;i++)
    {
        p = document.createElement('p');
        dests[i] = document.createElement("input");
        dests[i].setAttribute("type", "radio");
        dests[i].setAttribute("name", "value");
        dests[i].setAttribute("value", usrs["all"][i]);
        if(usrs["users"][i] != user1){
            p.appendChild(dests[i]);
            p.appendChild(document.createTextNode(" "+usrs["all"][i]));
            div.appendChild(p);
        }
    }
    
    p = document.createElement('p');
    dests[i] = document.createElement("input");
    dests[i].setAttribute("type", "radio");
    dests[i].setAttribute("name", "value");
    dests[i].setAttribute("value", "");
    dests[i].setAttribute("checked", "yes");
    p.appendChild(dests[i]);
    p.appendChild(document.createTextNode(" To everyone!"));
    div.appendChild(p);
    
    $('#destin').append(div);
    }
}

function closeAlertBox(){
    alertBox = document.getElementById("alertBox");
    alertCloseButton = document.getElementById("alertCloseButton");
    alertBox.style.visibility = "hidden";
    alertCloseButton.style.visibility = "hidden";
}

window.alert = function(msg){
    var id = "alertBox", alertBox, closeId = "alertCloseButton", alertCloseButton;
    alertBox = document.createElement("div");
    document.body.appendChild(alertBox);
    alertBox.id = id;
    alertBox.innerHTML = msg;
    alertCloseButton = document.createElement("div");
    alertCloseButton.id = closeId;
    alertCloseButton.innerHTML = "X";
    alertBox.appendChild(alertCloseButton);
    alertBox.style.visibility = "visible";
    alertCloseButton.style.visibility = "visible";
    alertCloseButton.onclick = closeAlertBox;
};

(function poll(){
    $.ajax({ url: "@{ReceiveR}", success: function(data){
        newMessage(data);
    }, dataType: "json", complete: poll, timeout: 0 });
})();

$(document).ready(function () {
    $('#offline').hide();
    obj = #{jsonData};    
    playing = obj["playing"];
    user1 = obj["user1"];

    if(playing){
        numUser = obj["numUser"];
        user2 = obj["user2"];
        turn = obj["turn"];
        for (var i=0;i<42;i++)
            grid[i] = obj["grid"][i];
        setView(true);
        createGrid();
    }
    else {
        setView(false);
        selectUser();
        sendNewMessage();
    }
});
