html
    font-family: sans-serif
    background-color: #000000
    font-size: 16px
    height: 100%
    min-width: 800px
    min-height: 500px

body
    height: 100%
    background-color: #000000

div#main 
    width: 95%
    min-width: 500px
    margin: 5% auto 0px auto
    padding: 20px
    background-color: #fff
    height: 75%

div#grid1
    width: 525px
    height: 525px
    display: block
    margin-left: auto
    margin-right: auto

div#info
    width: 400px
    display: block
    margin-left: auto
    margin-right: auto
    text-align: left

div#turn
    width: 400px
    display: block
    margin-left: auto
    margin-right: auto
    text-align: left
        
a#cancel
    width: 400px
    display: block
    margin: -15px auto 0px auto
    text-align: right

div#authid
    float:right
    margin: -40px 0px 0px 0px
    padding-right:10px
    padding-top:-50px
    color:#0174DF

div#authid a
    color: #fff

div#users
    height: 95%
    width: 70%
    display: block
    margin-left: auto
    margin-right: auto

div#startgame
    height: 75%
    width: 45%
    display: block
    margin-left: auto
    margin-right: auto
    text-align: left
    float: left

div#messages 
    margin: 0px
    width: 45%
    height: 75%
    overflow: auto
    float: right

div#history
    max-height: 40%
    overflow: auto

div#destin 
    max-height: 35%
    overflow: auto

div#footer
    height: 12%
    color: #fff
    padding: 2% 2% 2% 2%
    background-color: #000000
    display: block

div#source
    text-align: center
    float: center

div#source a
    color: #fff

div#deployment
    text-align: right
    float: right
    margin: -20px auto 0px auto

div#deployment a
    color:#0174DF

div#appsLink
    height: 5%
    width: auto
    display: block
    margin-left: auto
    margin-right: auto
    text-align: center

#alertBox
    position:absolute
    top:40%
    left:40%
    border:solid 1px black
    background-color: #0174DF
    padding: 50px
    visibility: hidden
    color: #000

#alertCloseButton
    position: absolute
    right:0
    top: 0
    background-color: black
    border: solid 1px white
    color: white
    width: 1em
    text-align: center
    color: #fff
    cursor: pointer
